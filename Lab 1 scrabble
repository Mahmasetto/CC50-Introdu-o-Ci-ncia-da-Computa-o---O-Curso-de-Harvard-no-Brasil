#include <cs50.h>
#include <string.h>
#include <stdio.h>
#include <math.h>
#include <ctype.h>

//Pontos para cada letra em ordem alfabÃ©tica
int points []={1, 3, 3, 2, 1, 4, 2, 4, 1, 8, 5, 1, 3, 1, 1, 3, 10, 1, 1, 1, 1, 4, 4, 8, 4, 10};
int total;

int compute_score(string word);

int main (void)
{
    string word1 = get_string ("Jogador 1: ");
    string word2 = get_string ("Jogador 2: ");

//Marcar pontos de cada palavra
int score1 = compute_score (word1);
int score2 = compute_score (word2);

//Comparar pontos
 if (score1 > score2)
    {
        printf("Jogador 1 Wins!\n");
    }
    else if (score1 < score2)
    {
        printf("Jogador 2 Wins!\n");
    }
    else
    {
        printf("Empate!\n");
    }
}

int compute_score(string word)
{
    int position;
    int score = 0;
    for (int i = 0; i < strlen(word); i++)
    {
        if (isalpha(word[i]))
        {
            if (isupper(word[i]))
            {
                position = word[i] - 65;
            }
            else
            {
                position = word[i] - 97;
            }
            score += points [position];
        }
    }
    return score;
}
